<% provide(:title, "勤怠ログ") %>
<% provide(:class_text, 'user--edit') %>

<div>
  <h1>勤怠ログ</h1>

  <!--ここから先が検索機能の実装部-->
  <%= form_with url:'/attendances_log_index_user_path', method: :get, local: true do |f| %>
    <%= f.select :selected_year, [['2019年', 2019],['2020年', 2020]], { include_blank: true, selected: 2020 }, { class: "form-control" } %>
    <%= f.select :selected_month, [['1月', 1],['2月', 2]], { include_blank: true, selected: 1 }, { class: "form-control" } %>
    <%= f.submit '検索', { class: "form-control" } %>
  <% end %>
  <!--ここまで-->
  
  
  <table class="table table-bordered table-condensed user-table">
    <thead>
      <tr>
        <th>日付</th>
        <th>変更前出社時間</th>
        <th>変更前退社時間</th>
        <th>変更後出社</th>
        <th>変更後退社</th>
        <th>指示者</th>
        <th>承認日</th>
      </tr>
    </thead>
    <tbody>
      <% if @attendances.count > 0 %>
        <% @attendances.each do |attendance| %>
        <tr>
          <td><%= l(attendance.worked_on, format: :short) %></td>
          <td><%= attendance.previous_started_at %></td>
          <td><%= attendance.previous_finished_at %></td>
          <td><%= attendance.started_at %></td>
          <td><%= attendance.finished_at %></td>
          <td><%= attendance.change_authorizer_id %>確認用アテンダンスID:<%= attendance.id %></td>
          <td><%= attendance.approval_date %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>

  </table>
</div>
